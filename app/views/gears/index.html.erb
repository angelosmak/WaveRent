<div class="container-index">
  <p class="display-1">Welcome to WaveRent!</p>
  <h3>A place for you to hire surf gear</h3>
</div>

<div class="container">
  <h4>Gear close to you</h4>
</div>


<div class="cards-container">
  <div class="cards">
    <% @gears.each do |gear| %>
      <div class="card-gear">
        <div class="card shadow p-3 mb-5 bg-body-tertiary rounded" style="width: 18rem;">
          <div id="carousel1<%= gear.id %>" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
              <% gear.photos.each_with_index do |photo, index| %>
                <li data-bs-target="#carousel<%= gear.id %>" data-bs-slide-to="<%= index %>" <%= 'class="active"' if index == 0 %>></li>
              <% end %>
            </ol>
            <div class="carousel-inner">
              <% gear.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= cl_image_tag photo.key, class: "d-block w-100" %>
                </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carousel<%= gear.id %>" role="button" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel<%= gear.id %>" role="button" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </a>
          </div>
          <div class="card-body">
            <h2><%= link_to gear.model, gear_path(gear) %></h2>
          </div>
        </div>
        <div class="card-gear-infos">
          <div>
            <h2><%= link_to gear.title, gear_path(gear) %></h2>
            <p><%= gear.description %></p>
          </div>
          <h2 class="card-gear-pricing">Â£99.99</h2>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a new Gear Listing", new_gear_path, class: "btn btn-primary" %>
</div>


