
<div class="container-index bg-colour">
  <p class="display-1">Welcome to WaveRent!</p>
   <h3>A place for you to hire surf gear</h3>
</div>

<div class="container bg-colour">
  <h4>Gear close to you</h4>
</div>

<div class="cards-container bg-colour">
  <div class="cards">
    <% @gears.each do |gear| %>
      <div class="card-gear">
          <% gear.photos.each do |photo| %>
        <div class="card shadow p-3 mb-5 bg-body-tertiary rounded" style="width: 18rem;">
          <%= cl_image_tag photo.key %>
        <% end %>
        <div class="card-body">
        <h2><%= link_to gear.model, gear_path(gear) %></h2>
        </div>
      </div>
        <div class="card-gear-infos">
          <div>
            <h2><%= link_to gear.title, gear_path(gear) %></h2>
            <p><%= gear.description%></p>
          </div>
          <h2 class="card-gear-pricing">Â£99.99</h2>
          <img src="<%=Faker::Avatar.image%>" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a new Gear Listing", new_gear_path, class: "btn btn-primary" %>
</div>


